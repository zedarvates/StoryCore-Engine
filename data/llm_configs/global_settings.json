      "performance_targets": {
        "rendering_time": "real_time",
        "memory_usage": "optimized",
        "cpu_utilization": "balanced",
        "gpu_acceleration": "enabled"
      }
    }
  },
  "workflow_config": {
    "generation_pipeline": {
      "step_1_preprocessing": {
        "description": "Préparation et analyse des entrées",
        "estimated_time": "5-10 minutes",
        "dependencies": [],
        "output_artifacts": ["input_analysis.json", "requirements_document.md"]
      },
      "step_2_structure_planning": {
        "description": "Planification de la structure narrative",
        "estimated_time": "15-20 minutes",
        "dependencies": ["step_1_preprocessing"],
        "output_artifacts": ["narrative_structure.json", "timeline_plan.json"]
      },
      "step_3_content_generation": {
        "description": "Génération du contenu principal",
        "estimated_time": "30-45 minutes",
        "dependencies": ["step_2_structure_planning"],
        "output_artifacts": ["script_draft.md", "dialogues.json", "scene_breakdown.json"]
      },
      "step_4_quality_refinement": {
        "description": "Affinement et optimisation de la qualité",
        "estimated_time": "20-30 minutes",
        "dependencies": ["step_3_content_generation"],
        "output_artifacts": ["final_script.md", "quality_report.json", "optimization_notes.md"]
      }
    },
    "validation_rules": {
      "content_validation": {
        "min_word_count": 500,
        "max_word_count": 10000,
        "readability_score": 70,
        "grammar_check": true,
        "spell_check": true
      },
      "structure_validation": {
        "has_clear_beginning": true,
        "has_middle_climax": true,
        "has_resolution": true,
        "character_arc_completeness": 0.8,
        "plot_consistency": 0.9
      }
    }
  },
