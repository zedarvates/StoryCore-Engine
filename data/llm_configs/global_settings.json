    "prompt_templates": [
      {
        "template_name": "character_introduction",
        "template": "Introduis {character_name} dans un {setting} avec une {emotion} émotion. Décrit son apparence et sa personnalité en {word_count} mots.",
        "variables": ["character_name", "setting", "emotion", "word_count"]
      },
      {
        "template_name": "conflict_scene",
        "template": "Crée une scène de confrontation entre {character1} et {character2} dans un {environment}. Le conflit porte sur {conflict_topic} et génère une {emotion} ambiance.",
        "variables": ["character1", "character2", "environment", "conflict_topic", "emotion"]
      }
    ]
  },
  "compatibility": {
    "llm_providers": {
      "openai": {
        "api_version": "v1",
        "models": ["gpt-4", "gpt-3.5-turbo", "gpt-4-turbo"],
        "rate_limits": {
          "requests_per_minute": 60,
          "tokens_per_minute": 90000
        }
      },
      "anthropic": {
        "api_version": "v1",
        "models": ["claude-3-opus", "claude-3-sonnet", "claude-3-haiku"],
        "rate_limits": {
          "requests_per_minute": 50,
          "tokens_per_minute": 75000
        }
      }
    },
    "file_formats": {
      "input_formats": ["json", "md", "txt", "docx"],
      "output_formats": ["json", "md", "pdf", "html"],
      "intermediate_formats": ["yaml", "xml", "csv"]
    }
  },
  "validation_schema": {
    "global_settings_validation": {
      "required_fields": [
        "metadata",
        "llm_parameters",
        "workflow_config",
        "examples",
        "compatibility"
      ],
      "field_validations": {
        "metadata": {
          "required": ["version", "created_at", "schema_version", "description"],
          "format_validations": {
            "version": "semantic_versioning",
            "created_at": "iso_8601_timestamp",
            "updated_at": "iso_8601_timestamp"
          }
        },
        "llm_parameters": {
          "required": ["model_config", "narrative_generation", "duration_planning", "quality_parameters"],
          "nested_validations": {
            "model_config": ["default_model", "temperature", "max_tokens"],
            "narrative_generation": ["title_generation", "plot_structure", "character_development"]
          }
        },
        "workflow_config": {
          "required": ["generation_pipeline", "validation_rules"],
          "array_validations": {
            "generation_pipeline": ["step_1_preprocessing", "step_2_structure_planning", "step_3_content_generation", "step_4_quality_refinement"]
          }
        }
      },
      "constraints": {
        "max_depth": 6,
        "max_string_length": 10000,
        "allowed_emotions": ["joy", "sadness", "anger", "fear", "surprise", "contempt", "anticipation", "trust", "curious", "contemplative", "intense", "prudent", "frustrated", "determined", "desperate", "resolved"]
      }
    }
