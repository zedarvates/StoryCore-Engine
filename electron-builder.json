{
  "appId": "com.storycore.engine",
  "productName": "StoryCore Engine",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist-electron/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "publish": {
    "provider": "github",
    "owner": "zedarvates",
    "repo": "StoryCore-Engine"
  },
  "win": {
    "target": "nsis",
    "signtoolOptions": {
      "signingHashAlgorithms": ["sha256"],
      "timeStampServer": "http://timestamp.digicert.com"
    }
  },
  "mac": {
    "target": "dmg",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "linux": {
    "target": "AppImage"
  }
}