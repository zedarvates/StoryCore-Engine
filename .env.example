# StoryCore-Engine Environment Configuration Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# ==============================================================================
# COMFYUI CONFIGURATION
# ==============================================================================

# ComfyUI Server URL
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8000  # Desktop version
# COMFYUI_PORT=8188  # Manual/Portable version

# Enable CORS for web access
COMFYUI_CORS_ENABLED=true

# ComfyUI Password (if configured)
# COMFYUI_PASSWORD=

# ==============================================================================
# OLLAMA CONFIGURATION
# ==============================================================================

# Ollama Server URL
OLLAMA_HOST=http://127.0.0.1:11434

# Default model to use
# OLLAMA_MODEL=llama3.2
# OLLAMA_MODEL=qwen2.5:3b
# OLLAMA_MODEL=deepseek-r1:8b

# Context window size
OLLAMA_CONTEXT_SIZE=4096

# Temperature for generation (0.0 - 1.0)
OLLAMA_TEMPERATURE=0.7

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application environment
NODE_ENV=development
# NODE_ENV=production

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum concurrent generations
MAX_CONCURRENT_JOBS=2

# Output directory for generated content
OUTPUT_DIR=./output

# Export directory
EXPORT_DIR=./exports

# ==============================================================================
# API KEYS (Optional - for cloud features)
# ==============================================================================

# HuggingFace token (for model downloads)
# HUGGINGFACE_TOKEN=

# OpenAI API Key (optional - for enhanced features)
# OPENAI_API_KEY=

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# JWT Secret Key (change in production!)
# JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Session encryption key
# SESSION_SECRET=your-session-secret

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================

# GPU VRAM allocation (in GB)
# GPU_VRAM_RESERVED=4

# Enable GPU acceleration
# GPU_ENABLED=true

# Cache directory
CACHE_DIR=./cache

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================

# Enable anonymous telemetry
# TELEMETRY_ENABLED=false

# Analytics endpoint (internal)
# ANALYTICS_ENDPOINT=

# ==============================================================================
# EXPERIMENTAL FEATURES
# ==============================================================================

# Enable experimental features
# EXPERIMENTAL_FEATURES=false

# WebSocket reconnection attempts
# WEBSOCKET_RETRY_ATTEMPTS=3

# ==============================================================================
# DATABASE (Optional)
# ==============================================================================

# SQLite database path (default)
# DATABASE_PATH=./data/storycore.db

# Redis URL (for distributed caching)
# REDIS_URL=redis://localhost:6379

# ==============================================================================
# TESTING (Do not modify for normal use)
# ==============================================================================

# Test mode
# TEST_MODE=false

# Test API key (for automated tests)
# TEST_API_KEY=

