# =============================================================================
# StoryCore Engine - Environment Configuration Template
# =============================================================================
# 
# Copy this file to .env and fill in your values for local development.
# Never commit the .env file with real credentials to version control.
# =============================================================================

# =============================================================================
# API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080
API_URL=http://localhost:8080
API_VERSION=v1

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Change this secret in production!
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost/video_editor
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0

# =============================================================================
# Ollama LLM Configuration
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b
OLLAMA_TIMEOUT=300
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# ComfyUI Configuration
# =============================================================================
COMFYUI_BASE_URL=http://127.0.0.1:7860
COMFYUI_TIMEOUT=600
COMFYUI_WORKFLOW_FOLDER=workflows

# =============================================================================
# GitHub API Configuration (Optional)
# =============================================================================
GITHUB_API_TOKEN=
GITHUB_API_URL=https://api.github.com
GITHUB_ORG=
GITHUB_REPO=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Feature Flags
# =============================================================================
USE_MOCK_LLM=false
USE_MOCK_COMFYUI=false
USE_MOCK_REDIS=false
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# File Storage Configuration
# =============================================================================
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=output
MAX_UPLOAD_SIZE=104857600

# =============================================================================
# Audio/Video Processing
# =============================================================================
AUDIO_SAMPLE_RATE=44100
VIDEO_QUALITY=high
FFMPEG_PATH=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Grafana Configuration (Production)
# =============================================================================
GRAFANA_PASSWORD=change-this-password-in-production

# =============================================================================
# Frontend-Specific Environment Variables (Vite)
# =============================================================================
# These should start with VITE_ prefix for the frontend build

VITE_API_URL=http://localhost:8080
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=qwen3:8b
VITE_COMFYUI_URL=http://127.0.0.1:7860
VITE_REDIS_URL=redis://localhost:6379/0
VITE_GITHUB_API_URL=https://api.github.com
VITE_GITHUB_TOKEN=
VITE_USE_MOCK_LLM=false
VITE_DEBUG=false
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173
